doctype html
html(lang='en')
    head
        title Tourney Gen
        link(rel="stylesheet" href="tourneygen.css")
        link(rel="stylesheet" href="login.css")
        script(src='login.js')
    body
        div(class="login-container")
            div(class="login-card")
                img(src="resources/tourneygenlogo.png")
                form(class = "login-form" method="POST")
                    input(type="text" id = "username" class = "login-field" name = "Username" placeholder="Username")
                    input(type="button" id = "submit" class = "login-button" value = "Login" onclick = "get_login()")

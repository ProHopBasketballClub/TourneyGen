extends ../../modal.pug

block modal-content
    style
        include modal.css

    div(class="modal-content" id="add-team-modal-content")
        form(class="basic-form-column" action="/add_team" method="POST") 
            div(class="form-box")
                h1(class="form-header" id="team-name-header")
                    | Team Name:
                input(type="text" id="team-name-field" class="form-field" name="teamName")
            div(class="form-box")
                p(class="form-text" id="team-description-text")
                    | Team Description
                textarea(id="team-description-field" class="form-field" name="teamDescription" rows="4" cols="20")
                p(class="form-text")
                    | Owner Email
                input(type="text" id="team-owner-field" class="form-field" name="teamOwnerEmail")
                p(class="form-text" id="team-roster-text")
                    | Team Roster
                textarea(id="team-roster-field" class="form-field" name="teamRoster" rows="4" cols="20")
            div(class="form-box")
                input(type="button" id="cancel-add-team" class="basic-button" value="Cancel")
                input(type="submit" id="submit-add-team" class="basic-button" value="Submit")

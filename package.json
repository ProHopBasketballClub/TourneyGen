{
  "name": "tourneygen",
  "version": "1.0.0",
  "description": "Tournament Website",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "(cd web/backend && tsc)",
    "build:frontend": "(cd web/frontend && tsc && pug -O env.js src)",
    "clean:backend": "rm -r web/backend/dist/",
    "clean:frontend": "find web/frontend/ -name '*.js' -type f -delete && find web/frontend/ -name '*.html' -type f -delete",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'web/**/*.ts' --fix",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "(cd test/backend && tsc) && mocha test/backend/src/ && find test/backend/ -name '*.js' -type f -delete",
    "test:frontend": "(cd test/frontend && tsc) && mocha test/frontend/src/ && find test/frontend/ -name '*.js' -type f -delete",
    "start:frontend": "node web/frontend/src/app.js",
    "sb:frontend": "npm run build:frontend && npm run start:frontend",
    "start:backend": "docker-compose up --build",
    "startBackground:backend": "docker-compose up --build -d",
    "sb:backend": "npm run build:backend && npm run start:backend",
    "sb": "npm run sb:backend && npm run sb:frontend",
    "generate_coverage": "./node_modules/.bin/nyc --reporter=lcov --reporter=text-summary npm run test"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seng350/seng350f19-project-team-3-9.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/seng350/seng350f19-project-team-3-9/issues"
  },
  "homepage": "https://github.com/seng350/seng350f19-project-team-3-9#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.4.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.14.3",
    "mocha": "^6.2.1",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.1.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "commonjs": "0.0.1",
    "dotenv": "^8.2.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "http-status-codes": "^1.3.2",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mongodb": "^3.3.2",
    "nyc": "^14.1.1",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "systemjs": "^6.1.0",
    "tslint": "^5.20.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
